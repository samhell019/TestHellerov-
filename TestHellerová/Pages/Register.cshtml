@page
@model TestHellerová.Pages.RegisterModel
@{
    <h1>Registrace nového uživatele</h1>
    <form method="post">
        <div class="form-group">
            <label asp-for="@Model.Jmeno"></label>
            <input asp-for="@Model.Jmeno" type="text" id="firstname" class="form-control" placeholder="Jmeno" />
            <span asp-validation-for="@Model.Jmeno" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Email"></label>
            <input asp-for="@Model.Email" type="email" id="email" class="form-control" placeholder="email@seznam.cz" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Pobocka" class="form-label"></label>
            <select asp-for="@Model.Pobocka" asp-items="@Model.Pobocky" class="form-control">
                <option>-- Vyberte ze seznamu --</option>
            </select>
        </div>
        <div>
            <label asp-for="@Model.Information" class="form-label"></label>
            @foreach (var neco in Enum.GetValues(typeof(KnowledgeSource)))
            {
                <div class="form-check">
                    <input class="for-check-input" type="radio" asp-for="@Model.Information" value="@neco" />
                    <label class="form-check-label" asp-for="@Model.Information">@neco</label>
                </div>
            }
        </div>
        <div class="form-group">
            <label asp-for="@Model.Odmeny"></label>
            <input asp-for="@Model.Odmeny" type="number" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Heslo"></label>
            <input asp-for="@Model.Heslo" type="password" class="form-control" placeholder="******" />
            <span asp-validation-for="@Model.Heslo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Heslo_Znovu"></label>
            <input asp-for="@Model.Heslo_Znovu" type="password" class="form-control" placeholder="******" />
            <span asp-validation-for="@Model.Heslo_Znovu" class="text-danger"></span>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="@Model.Souhlas" />
            <label class="form-check-label" asp-for="@Model.Souhlas"></label>
            <span asp-validation-for="@Model.Souhlas" class="text-danger"></span>
        </div>
        <div>
            <button class="btn btn-primary" type="submit">Registrace</button>
        </div>
    </form>
}